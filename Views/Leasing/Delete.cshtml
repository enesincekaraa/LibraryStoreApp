@model Leasing

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Delete To Leasing</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="CustomerId" class="p-0"></label>
            <input asp-for="CustomerId" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Book.BookName" class="p-0"></label>
            <select asp-for="Book.BookName" asp-items="ViewBag.BookList" disabled class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Delete To Leasing</button>

        <a asp-action="Index" asp-controller="Leasing" class="btn btn-lg btn-primary" style="width:250px">Return To Leasing</a>
    </div>

</form>

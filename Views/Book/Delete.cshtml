@model Book
<form method="post">

    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="BookName" class="p-0"></label>
            <input asp-for="BookName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Delete Book</button>

        <a asp-action="Index" asp-controller="Book" class="btn btn-lg btn-primary" style="width:250px">Return To Book</a>
    </div>


</form>

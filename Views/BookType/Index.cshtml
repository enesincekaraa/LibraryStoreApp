@model List<BookType>

@if(TempData["Success"] != null)
{
   <h2 style="color:red">@TempData["Success"]</h2> 
}

<div class="container">
    <div class="row pt-3 pb-4"
    <div>
<h1>Book Types</h1>
    </div>
</div>


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Book Type</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var bookType in Model)
            {
                <tr>
                    <td>@bookType.Id</td>
                    <td>@bookType.Name</td>
                    <td><a asp-controller="BookType" asp-action="Update" asp-route-id="@bookType.Id" type="button" class="btn btn-success" style="width:250px">Update</a></td>
                    <td><a asp-controller="BookType" asp-action="Delete" asp-route-id="@bookType.Id" type="button" class="btn btn-danger" style="width:250px">Delete</a></td>

                </tr>
            }
        </tbody>


    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a class="btn btn-lg btn-primary" type="button" asp-controller="BookType" asp-action="Add">New Book Type Add</a>
        </div>
    </div>

</div>